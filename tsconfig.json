{
    "compilerOptions": {
      "outDir": "./built/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "target": "es6",
      "lib": [
        "es2016",
        "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "vendor"
    ]

    // "include": [
    //   "resources/ts/**/*" // TypeScriptのソース配置場所
    // ]
}
